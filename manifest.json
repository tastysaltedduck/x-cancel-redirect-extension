{
    "manifest_version": 2,
    "name": "XCancel Redirect",
    "version": "1.0",
    "description": "Redirects Twitter/X to XCancel",

    "browser_specific_settings": {
      "gecko_android": {},
      "gecko": {
        "id": "{9063c2e9-e07c-4c2c-9646-cfe7ca8d0498}"
      }
    },

    "background": {
      "scripts": ["x_cancel_redirect.js"]
    },

    "icons": {
      "48": "icons/border-48.png"
    },
  
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "*://x.com/*",
      "*://www.x.com/*",
      "*://twitter.com/*",
      "*://www.twitter.com/*"
    ]
  }
  